// Half Adder using Data flow modeling

module half_adder(a,b,sum,carry);
input a,b;
output sum,carry;
assign sum = a^b;
assign carry = a&b;
endmodule

//Full Adder using Data flow modeling

module fulladd(a,b,c,sum,carry);
input a,b,c;
output sum,carry;
assign sum =a^b^c;
assign carry =(a&b)|(b&c)|(c&a);
endmodule
